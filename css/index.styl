/* fonts */
font_title = 'Bad Script', cursive

/* reset */
ul
    padding 0
    margin 0
li
    list-style none
    
/* style base */

body
    background #f5f5f5
    
.box-content
    background #fff
    width 400px
    margin 0 auto
    -webkit-border-radius 4px
    -moz-border-radius 4px
    border-radius 4px
    padding 10px
    
h1
    font-size 38px
    font-family font_title
    text-align center
    
/* style users */
.list-user
    margin-bottom 10px

    .name
        font-weight 700
        
    .username
        font-style italic
        
    .company
        font-size 12px
        display block

/* style posts */
.post-title
    font-weight 700
    display block
    
    &:first-letter
        text-transform uppercase
    
.post-text
    background #eee
    padding 10px
    margin-top 5px
    margin-bottom 20px